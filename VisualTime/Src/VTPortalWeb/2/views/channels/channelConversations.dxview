<div data-options="dxView : { name: 'channelConversations', title: 'channelConversations', disableCache: 'true', width:'100%' } " >

	<div id="smallUserInfo"></div>

	<div id="scrollview" style="clear:both" data-bind="dxScrollView: conversationsContent ">
		<div id="list" class="list-container list-container-withAlerts" data-bind="if: conversationsDS().length > 0">
			<div data-bind="dxList: listConversations">
				<div data-options="dxTemplate: {name: 'AlertItem'}">
					<div class="listMenuItem">
						<div data-bind="css: $data.cssClass" class="listMenuItemIcon"></div>
						<div class="listMenuItemContent">
							<div data-bind="text: $data.Title"></div>
							<div class="smallTextDescription" data-bind="text: $data.ConversationDetails"></div>
						</div>

						<div data-bind="if: $data.NewMessages > 0">
							<div style=" justify-content:flex-end; display:flex;height: 30px;padding: 7px;">
								<div id="spinright-button" class="alertHome">
									<div class="dx-button-content">
										<span class="dx-button-text" data-bind="text: $data.NewMessages"></span>
									</div>
								</div>
							</div>
						</div>

						<div data-bind="if: $data.NewMessages == 0">
							<div style=" justify-content:flex-end; display:flex;height: 30px;padding: 7px;">
								<div id="spinright-button" class="list-item-arrow"></div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>

		<div data-bind="if: conversationsDS().length= 0">
			<div class="noDataCssClass"></div>
		</div>
	</div>

	<div id="btnActionMenuPopover" class="actionButton fixedButton" data-bind="dxButton: btnAdd"></div>
	
	<div data-bind="dxPopup: {showTitle: false, closeOnOutsideClick:false,closeOnBackButton:false, visible: popupAddNewConversationVisible, height: 'auto'}">
		<div id="addNewConversation" class="dx-fieldset">
			<div class="dx-field">
				<span data-bind="text: lblTitle"></span>
				<div class="dx-field-value" data-bind="dxTextBox: txtTitle, dxValidator: requieredTitle "></div>
			</div>
			<div class="dx-field">
				<span data-bind="text: lblMessage"></span>
				<div class="dx-field-value" data-bind="dxTextArea: txtMessage, dxValidator: requieredMessage "></div>
			</div>
			<!-- ko if: showAnonymous() == true -->
			<div class="dx-field">
				<span data-bind="text: lblAnonymous"></span>
				<div class="dx-field-value" data-bind="dxCheckBox: sbAnonymous "></div>
			</div>
			<!-- /ko -->
		</div>

		<div style="padding-top:5px">
			<div style="float:left;width:50%" class="get-to-work-blue" data-bind="dxButton: btnCancel"></div>
			<div style="float:left;width:50%" class="get-to-work-orange" data-bind="dxButton: btnAddNewConversation"></div>
		</div>
	</div>

  <div data-bind="dxLoadPanel: loadingPanel"> </div>
   
</div>