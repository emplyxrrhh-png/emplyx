@page "/configuracion/organizacion/empresas"
@using Emplyx.Application.Abstractions
@using Emplyx.Shared.Contracts.Empresas
@inject IEmpresaService EmpresaService
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<h3>Empresas</h3>

<div class="mb-3">
    <button class="btn btn-primary" @onclick="CreateNew">Nueva Empresa</button>
</div>

@if (empresas == null)
{
    <p><em>Cargando...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Razón Social</th>
                <th>CIF</th>
                <th>País</th>
                <th>Activa</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var empresa in empresas)
            {
                <tr>
                    <td>@empresa.Nombre</td>
                    <td>@empresa.RazonSocial</td>
                    <td>@empresa.CIF</td>
                    <td>@empresa.Pais</td>
                    <td>@(empresa.IsActive ? "Sí" : "No")</td>
                    <td>
                        <button class="btn btn-secondary btn-sm" @onclick="() => Edit(empresa.Id)">Editar</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<EmpresaResponse>? empresas;

    protected override async Task OnInitializedAsync()
    {
        empresas = await EmpresaService.GetAllAsync();
    }

    private void CreateNew()
    {
        NavigationManager.NavigateTo("/configuracion/organizacion/empresas/nueva");
    }

    private void Edit(Guid id)
    {
        NavigationManager.NavigateTo($"/configuracion/organizacion/empresas/editar/{id}");
    }
}
