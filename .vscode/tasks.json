{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/Emplyx.Blazor/Emplyx.Blazor.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "run-emplyx-https",
      "type": "process",
      "command": "dotnet",
      "args": [
        "run",
        "--project",
        "${workspaceFolder}/Emplyx.Blazor/Emplyx.Blazor.csproj",
        "-c",
        "Debug",
        "--urls",
        "https://localhost:5001"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "npm: dev - Emplyx.React",
      "type": "process",
      "command": "C:\\Users\\ezemi\\scoop\\apps\\nodejs-lts\\current\\node.exe",
      "args": [
        "node_modules/vite/bin/vite.js"
      ],
      "options": {
        "cwd": "${workspaceFolder}/Emplyx.React"
      },
      "isBackground": true,
      "presentation": {
        "group": "group",
        "reveal": "always",
        "panel": "dedicated"
      },
      "problemMatcher": {
        "owner": "custom",
        "pattern": {
          "regexp": "^$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "VITE",
          "endsPattern": "Local:"
        }
      }
    }
  ]
}
